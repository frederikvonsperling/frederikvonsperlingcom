{
  "extends": "@fvs/tsconfig/react-library.json",
  "strictNullChecks": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["src/*"],
      "@styled-system/*": ["styled-system/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "styled-system"],
  "exclude": ["dist", "build", "node_modules"]
}
