{
  "extends": "@fvs/tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/*": ["src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@styled-system/*": ["styled-system/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "styled-system"
  ],
  "exclude": ["node_modules"]
}
